                <CollectionView.EmptyView>
                    <Label Text="No option found." TextColor="RoyalBlue" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="10">
                            <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="235"
                                   HorizontalOptions="FillAndExpand"></Image>
                            <Label Text="{Binding OptionName}" TextColor="RoyalBlue" FontSize="14"></Label>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        
        
